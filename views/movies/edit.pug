extends ../layout

block content
  .content
    h1 Edit Movie
    if errors && errors.length > 0
      .errors
        ul
          each error in errors
            li.error= error.msg
    form.movie-form(action=`/movies/${movie._id}/edit`, method='POST')
      .form-group
        label(for='name') Movie Name:
        input(type='text', id='name', name='name', value=movie && movie.name || '', required)
      
      .form-group
        label(for='description') Description:
        textarea(id='description', name='description', required)= movie && movie.description || ''
      
      .form-group
        label(for='year') Release Year:
        input(type='number', id='year', name='year', min='1900', max='2030', value=movie && movie.year || '', required)
      
      .form-group
        label(for='genres') Genres (comma separated):
        input(type='text', id='genres', name='genres', value=movie && movie.genres ? movie.genres.join(', ') : '')
      
      .form-group
        label(for='rating') Rating (0-10):
        input(type='number', id='rating', name='rating', min='0', max='10', step='0.1', value=movie && movie.rating || '', required)
      
      button(type='submit') Save Changes